# Default server configuration
#
server {
	listen 80;
	root /var/www/html;
	index index.html index.htm;

	location /grafana/ {
		proxy_pass http://localhost:3000/;
		proxy_redirect	default;
	}

	location /admin/ {
		proxy_pass http://localhost:8888/admin/;
		proxy_set_header Host $host;
	}
	
	location / {
		proxy_pass http://localhost:8086/;
		proxy_redirect	default;
	}
}


